<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="5dp" />
            <stroke android:width="2dp" android:color="@color/medium_blue" />
            <gradient android:angle="-90" android:startColor="@color/medium_blue" android:endColor="@color/light_blue"  />
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="5dp" />
            <stroke android:width="2dp" android:color="@color/medium_blue" />
            <gradient android:angle="-90" android:startColor="@color/light_blue" android:endColor="@color/medium_blue" />
        </shape>
    </item>
</selector>