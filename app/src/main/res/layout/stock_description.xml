<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingRight="85px"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:paddingLeft="1dp"
    android:background="@drawable/stock_item_background">
    <TextView
        android:layout_centerVertical="true"
        android:id="@+id/circle_item"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_alignParentLeft="true"
        android:background="@drawable/circle_item2"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:textAlignment="center"
        android:layout_gravity="center_vertical"
        android:gravity="center"
        android:text="H"
        android:textColor="@color/white"
        android:textSize="20sp"/>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_toRightOf="@id/circle_item"
        android:layout_alignParentRight="true">
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Alphabet Inc."
            android:id="@+id/name"
            android:textSize="@dimen/item_font_size"
            android:maxLines="1"
            android:ellipsize="end"/>
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="GOOG"
            android:id="@+id/symbol"
            android:textSize="@dimen/item_font_size"
            android:maxLines="1"
            android:ellipsize="end"/>
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="$100"
            android:id="@+id/price"
            android:textSize="@dimen/item_font_size"
            android:maxLines="1"
            android:ellipsize="end"/>
    </LinearLayout>
</RelativeLayout>
