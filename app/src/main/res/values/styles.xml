<resources>

    <!--<style name="AppTheme" parent="AppTheme.Base"/>-->
    <!-- Base application theme. -->
    
    <style name="AppTheme" parent="AppTheme.Base"/>
    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryDark">@color/dark_primary_color</item>
        <item name="colorAccent">@color/accent_color</item>
        <item name="android:colorBackground">@color/white</item>
        <item name="android:textColorPrimary">@color/primary_text_color</item>
        <item name="android:textColorSecondary">@color/secondary_text_color</item>
    </style>

    <style name="PortfolioRebalancing" parent="AppTheme">
        <item name="colorPrimary">@color/light_blue</item>
        <item name="colorPrimaryDark">@color/medium_blue</item>
        <item name="colorAccent">@color/light_blue</item>
        <item name="android:colorBackground">@color/stock_item_background</item>

        <item name="editTextStyle">@style/EditText</item>
        <item name="android:editTextStyle">@style/EditText</item>

        <item name="android:windowSoftInputMode">adjustPan</item>

        <item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Material</item>
        <item name="alertDialogTheme">@style/AppAlertDialog</item>
    </style>

    <style name="AppAlertDialog" parent="Theme.AppCompat.DayNight.Dialog.Alert">
        <item name="colorAccent">@color/light_blue</item>
    </style>

    <style name="InfoPickerActivity" parent="PortfolioRebalancing">
        <item name="android:homeAsUpIndicator">@drawable/cancel</item>
    </style>

    <!-- This style is for EditText items, so that the keyboard has a "Done" option. -->
    <style name="EditText" parent="@android:style/Widget.EditText">
        <item name="android:imeOptions">actionDone</item>
        <item name="android:singleLine">true</item>
    </style>

</resources>
